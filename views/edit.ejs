<%- include('partials/header') %>
<div class="big-container">
   <div class="form-container container">
      <h4>Edit Blog</h4>
      <form action="/blogs/<%= blog._id%>?_method=put" method="post">

         <input class="input" type="text" name="blog[title]" value="<%= blog.title %>">

         <input class="input" type="text" name="blog[image]" value="<%= blog.image %>">

         <textarea name="blog[body]" id="" cols="30" rows="10" value=""><%= blog.body %></textarea>
         <div class="fomr__div">
            <input class="submit__button" type="submit">
            <a class="cancel__button" href="/blogs/<%= blog._id%>">Cancel</a>
         </div>




      </form>

   </div>
</div>


<%- include('partials/footer') %>